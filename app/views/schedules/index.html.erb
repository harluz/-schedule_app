<div class="container">
  <div class="PageTitle">
    <h2 class="PageTitle__text">予約一覧</h2>
    <%= link_to "新規作成", :new_schedule %>
  </div>
</div>

<div class="table-responsive TableResponsive">
  <table class="table Table">
    <thead>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.id %></td>
          <td><%= schedule.title %></td>
          <td><%= l schedule.start_date %></td>
          <td><%= l schedule.end_date %></td>
          <td>
            <% if schedule.all_day == true %>
              ○
            <% end%>
          </td>
          <td><%= l schedule.created_at, format: :short %></td>
          <td>
            <%= link_to "詳細", schedule %>
          </td>
          <td>
            <%= link_to "編集", edit_schedule_path(schedule) %>
          </td>
          <td>
            <%= link_to "削除", schedule, method: :delete, data: { confirm: "予約を削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <p>予約合計<span><%= @schedules.count %></span>件</p>
    <p>本日の日付<%= l @todays_date %></p>
  </div>
</div>