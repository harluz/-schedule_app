<section class="FormWrapper">
  <h2 class="PageTitle__text">予定の新規追加</h2>
  <div class="FormContainer">

  <%= render "shared/error", obj: @schedule %>

  <%= form_with model: @schedule do |f|%>
    <table>
      <tr>
        <th><%= f.label :title,"タイトル" %></th>
        <td><%= f.text_field :title, placeholder: "タイトル" %></td>
      </tr>
      <tr>
        <th><%= f.label :start_date,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <th><%= f.check_box :all_day %></th>
        <td><%= f.label :all_day, "終日の場合はチェックを入れます" %></td>
      </tr>
      <tr>
        <th><%= f.label :memo,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo, placeholder: "メモを入力する" %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "保存" %></li>
        <li><%= link_to "キャンセル", schedules_path %></li>
      </ul>
    </div>
  <% end %>
  </div>
</section>